# EcoBottle Staging Environment Configuration
# =====================================================

# Application Environment
NODE_ENV=staging
PORT=4000
PROM_PORT=9100

# AWS Configuration (использовать dev ресурсы)
AWS_REGION=ap-northeast-2

# Database - можно использовать меньший RDS instance
DATABASE_URL=postgresql://ecobottle_staging:password@staging-db-endpoint:5432/ecobottle_staging

# Cache - Redis
REDIS_URL=redis://staging-redis-endpoint:6379

# Application URLs
NEXTAUTH_URL=http://staging.ecobottle.com
NEXT_PUBLIC_API_BASE=http://staging.ecobottle.com/api
CORS_ORIGIN=http://staging.ecobottle.com

# Security Secrets (разные от prod!)
JWT_SECRET=staging_jwt_secret_64_chars_different_from_production_secret_here
NEXTAUTH_SECRET=staging_nextauth_secret_32_chars

# Google OAuth (staging app)
GOOGLE_CLIENT_ID=staging_google_client_id
GOOGLE_CLIENT_SECRET=staging_google_client_secret
GOOGLE_REDIRECT_URI=http://staging.ecobottle.com/api/auth/google/callback

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=StagingPass123!

# Performance (меньше чем prod)
MAX_CONNECTIONS=50
TIMEOUT_MS=15000

# Feature Flags
ENABLE_METRICS=true
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=false

# Backup
BACKUP_ENABLED=false
