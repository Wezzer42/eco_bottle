# Production Environment Variables
# Copy this file to .env.prod and fill in your values

# Database
POSTGRES_DB=ecobottle
POSTGRES_USER=ecobottle
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://ecobottle:your_secure_password_here@postgres:5432/ecobottle

# Redis
REDIS_URL=redis://redis:6379

# Security
JWT_SECRET=your_jwt_secret_here_64_characters_minimum_for_production_security
NEXTAUTH_SECRET=your_nextauth_secret_here_32_characters_minimum_secure

# URLs
NEXTAUTH_URL=https://your-domain.com
NEXT_PUBLIC_API_BASE=https://your-domain.com/api
CORS_ORIGIN=https://your-domain.com

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password
