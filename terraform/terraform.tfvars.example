# AWS Configuration
aws_region = "us-east-1"
project_name = "ecobottle"
environment = "prod"

# Domain Configuration
domain_name = "your-domain.com"  # Replace with your domain

# Security
admin_cidr = "YOUR_IP/32"  # Replace with your IP for security

# EC2 Configuration
instance_type = "t3.medium"
key_pair_name = "your-key-pair"  # Create this in AWS first
min_instances = 1
max_instances = 3
desired_instances = 2

# Database Configuration
db_instance_class = "db.t3.micro"
db_name = "ecobottle"
db_username = "ecobottle"
db_password = "your_secure_password_here"  # Generate secure password

# Redis Configuration
redis_node_type = "cache.t3.micro"
redis_auth_token = "your_redis_auth_token_here"  # Generate secure token

# Application Secrets
jwt_secret = "your_jwt_secret_64_characters_minimum_for_production_security"
nextauth_secret = "your_nextauth_secret_32_characters_minimum_secure"
